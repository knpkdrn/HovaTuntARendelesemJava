<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="300.0" prefWidth="450.0" styleClass="main-pane" stylesheets="@css/login-view-style.css"
          xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.hovatuntarendelesemjava.ChangePasswordViewController">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>

    </rowConstraints>

    <Label wrapText="true" text="Please change your password!"/>
    <PasswordField fx:id="passwordField" promptText="New password" styleClass="user-input-field" GridPane.rowIndex="1"/>
    <PasswordField fx:id="repeatField" promptText="Repeat password" styleClass="user-input-field" GridPane.rowIndex="2"/>
    <Button fx:id="okButton" styleClass="log-in-button" text="OK" GridPane.rowIndex="3" onMouseClicked="#onOkButtonClicked"/>


</GridPane>
